{
  "name": "@devix-tecnologia/directus-extension-mapgrid",
  "version": "1.0.0",
  "description": "Extension for show map and grid list on Layout Directus",
  "icon": "extension",
  "keywords": [
    "directus",
    "directus-extension",
    "directus-extension-layout",
    "map",
    "grid"
  ],
  "type": "module",
  "license": "MIT",
  "author": "Devix Tecnologia",
  "contributors": [
    {
      "name": "Sidarta Veloso",
      "github": "https://github.com/sidartaveloso",
      "linkedin": "https://www.linkedin.com/in/sidartaveloso"
    },
    {
      "name": "Fernando Gatti",
      "github": "https://github.com/gattifernando",
      "linkedin": "https://www.linkedin.com/in/gattifernando/"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/devix-tecnologia/directus-extension-mapgrid"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "dist/",
    "package.json",
    "pnpm-lock.yaml"
  ],
  "directus:extension": {
    "type": "layout",
    "path": "dist/index.js",
    "source": "src/index.ts",
    "host": "^10.10.0",
    "sandbox": {
      "enabled": true,
      "requestedScopes": {}
    },
    "types": [
      "layout"
    ]
  },
  "scripts": {
    "build": "directus-extension build",
    "dev": "directus-extension build -w --no-minify",
    "link": "directus-extension link",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,vue}\"",
    "lint:fix": "eslint \"src/**/*.{ts,vue}\" --fix",
    "format": "prettier --write src/",
    "prepare": "husky"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "^13.0.1",
    "@directus/types": "^13.0.0",
    "@eslint/js": "^9.20.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@vue/eslint-config-typescript": "^14.4.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "semantic-release": "^24.2.3",
    "typescript": "^5.7.3",
    "vue": "^3.5.13",
    "vue-eslint-parser": "^9.4.3"
  },
  "dependencies": {
    "@types/geojson": "^7946.0.16",
    "@types/leaflet": "^1.9.16",
    "leaflet": "^1.9.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "semi": true,
    "tabWidth": 2
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
